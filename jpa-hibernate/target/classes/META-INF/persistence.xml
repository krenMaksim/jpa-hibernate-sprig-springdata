<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
        
    <persistence-unit name="testJpa">
    	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    	
    	<class>com.kren.jpa.entity.TestUserEntity</class> 
    
    	<properties>
    		<!--   <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" /> -->
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/test_jpa" />
            <property name="javax.persistence.jdbc.user" value="we" />
            <property name="javax.persistence.jdbc.password" value="pass" />
            <property name="javax.persistence.jdbc.write-connections.min" value="1" />
            <property name="javax.persistence.jdbc.write-connections.max" value="2" />
            
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>

